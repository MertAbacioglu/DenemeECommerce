@model CategoryVM
@{
    ViewBag.Title = "CategoryList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="panel-body">
    <div class="adv-table">
        <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="hidden-table-info">
            <thead>
                <tr>
                    <th>Category ID</th>
                    <th>Category Name</th>
                    <th class="hidden-phone">Description</th>
                    <th class="hidden-phone">Delete</th>
                    <th class="hidden-phone">Update</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Category item in Model.Categories)
                {
                    <tr class="gradeX">
                        <td>@item.ID</td>
                        <td class="hidden-phone">@item.CategoryName</td>
                        <td class="hidden-phone">@item.Description</td>
                        <td class="center hidden-phone">@Html.ActionLink("Delete", "DeleteCategory", new { id = item.ID }, new { @class = "btn btn-danger", onclick = "return ShowDialog('" + item.CategoryName + "')" })</td>
                        <td class="center hidden-phone">@Html.ActionLink("Update", "UpdateCategory", new { id = item.ID }, new { @class = "btn btn-warning" })</td>


                    </tr>
                }
                <tr class="gradeX">
                    <td>Trident</td>
                    <td>
                        Internet
                        Explorer 4.0
                    </td>
                    <td class="hidden-phone">Win 95+</td>
                    <td class="center hidden-phone">4</td>
                    <td class="center hidden-phone">X</td>
                </tr>



            </tbody>

        </table>
        <a href="/Admin/Category/AddCategory" class="btn btn-primary"> Add new category </a>

    </div>

</div>

<script src="~/Areas/Admin/AdminContent/CategoryDTJ.js"></script>
@section LogOutBut{
    <li>@Html.ActionLink("LogOut", "Home", new { @class = "btn btn-warning" }, new { @style = "color:Red" })</li>
}
