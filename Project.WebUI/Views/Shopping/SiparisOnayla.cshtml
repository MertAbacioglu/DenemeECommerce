@model OrderVM
@{
    ViewBag.Title = "SiparisOnayla";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="jumbotron">Siparisi Onayla</h2>

<div>
    @using (Html.BeginForm("SiparisiOnayla", "Shopping", FormMethod.Post, new { @class = "form-horizontal tasi-form" }))
    {
        <div class="form-group">
            <label class="col-sm-2 control-label">Gönderim Adresi</label>
            <div class="col-sm-10">
                @Html.TextAreaFor(x => x.Order.ShippedAddress, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Kart Numarası</label>
            <div class="col-sm-10">
                @Html.TextAreaFor(x => x.PaymentDTO.CardNumber, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Kart Güvenlik Numarası</label>
            <div class="col-sm-10">
                @Html.TextAreaFor(x => x.PaymentDTO.SecurityNumber, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Son Kullanma Tarihi Yıl</label>
            <div class="col-sm-10">
                @Html.TextAreaFor(x => x.PaymentDTO.CardExpiryYear, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Son Kullanma Tarihi Ay</label>
            <div class="col-sm-10">
                @Html.TextAreaFor(x => x.PaymentDTO.CardExpiryMonth, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Kart Üzerindeki İsim</label>
            <div class="col-sm-10">
                @Html.TextAreaFor(x => x.PaymentDTO.CardUserName, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">E-mail adresiniz</label>
            <div class="col-sm-10">
                @Html.TextAreaFor(x => x.Order.Email, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Son Kullanma Tarihi Yıl</label>
            <div class="col-sm-10">
                <button class="btn btn-primary">Onay</button>
            </div>
        </div>
    }
</div>
@section LogOut{
    <li><a href="@Url.Action("LogOut","Home")"><i class=" glyphicon-log-out" style="color:red"></i>LogOut</a></li>
}

@section LogOutBut{
    <li>@Html.ActionLink("LogOut", "Home", new { @class = "btn btn-warning" }, new { @style = "color:Red" })</li>
}

