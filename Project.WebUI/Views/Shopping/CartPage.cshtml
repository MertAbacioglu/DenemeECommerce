@model CartPageVM
@{
    ViewBag.Title = "CartPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron">
    Odemeniz ereken toplam tutar : @Model.Cart.TotalPrice   ödemeyi tamamlamak için @Html.ActionLink("Tıklayınız", "SiparisOnayla")
</div>

<div class="row product-list">
    @foreach (CartItem item in Model.Cart.Sepetim)
    {
        <div class="col-md-4">
            <section class="panel">
                <div class="pro-img-box">
                    @if (item.ImagePath == null)
                    {
                        <img src="~/Pictures/notFound.png" width="100" ,height="300" alt="No image found" ,title="@item.Name" />

                    }
                    else
                    {
                        <img src="@item.ImagePath" width="100" ,height="300" ,title="@item.Name" />
                    }

                    <a href="@Url.Action("DeleteFromCart", new { id = item.ID })" class="adtocart">
                        <i class="glyphicon glyphicon-remove"></i>
                    </a>
                </div>

                <div class="panel-body text-center">
                    <h4>
                        <a href="#" class="pro-title">
                            @item.Name x @item.Amount

                        </a>
                    </h4>
                    <p class="price">$@item.SubTotal</p>
                </div>
            </section>
        </div>
    }


</div>

@section LogOut{
    <li><a href="@Url.Action("LogOut","Home")"><i class=" glyphicon-log-out" style="color:red"></i>LogOut</a></li>
}

@section LogOutBut{
    <li>@Html.ActionLink("LogOut", "Home", new { @class = "btn btn-warning" }, new { @style = "color:Red" })</li>
}